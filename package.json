{
  "name": "",
  "version": "0.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "forever build/server.js",
    "build:server": "webpack --env.target=server --env.env=production",
    "build:client": "webpack --env.target=client --env.env=production",
    "build": "rimraf build && npm run build:server && npm run build:client",
    "test:server": "tape build/tests/server.js | tap-diff --color",
    "test:client": "tape-run < build/tests/client.js | tap-diff --color",
    "test": "npm run build:server && npm run test:server && npm run build:client && npm run test:client",
    "dev": "webpack --env.target=server --env.env=development --watch & webpack --env.target=client --env.env=development --watch & npm-watch"
  },
  "watch": {
    "test:client": "build/tests/client.js",
    "test:server": "build/tests/server.js"
  },
  "babel": {
    "presets": [
      "es2015-auto",
      "stage-1",
      "react"
    ],
    "plugins": [
      [
        "transform-async-to-module-method",
        {
          "module": "bluebird",
          "method": "coroutine"
        }
      ],
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-async-to-module-method": "^6.5.2",
    "babel-plugin-transform-runtime": "^6.6.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2015-auto": "^1.0.1",
    "babel-preset-es2015-webpack": "^6.4.0",
    "babel-preset-es2015-webpack-loose": "^6.3.14",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-1": "^6.5.0",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "fake-style-loader": "^1.0.0",
    "fake-url-loader": "^1.0.0",
    "image-webpack-loader": "^1.6.3",
    "json-loader": "^0.5.4",
    "koa-compose": "^3.0.0",
    "koa-convert": "^1.2.0",
    "koa-webpack-dev-middleware": "^1.1.0",
    "koa-webpack-hot-middleware": "^1.0.3",
    "npm-watch": "^0.1.1",
    "postcss-cssnext": "^2.4.0",
    "postcss-loader": "^0.8.1",
    "rimraf": "^2.5.2",
    "source-map-support": "^0.4.0",
    "style-loader": "^0.13.0",
    "tap-diff": "^0.1.1",
    "tape": "^4.5.1",
    "tape-run": "^2.1.3",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.4",
    "webpack-node-externals": "^1.0.0"
  },
  "dependencies": {
    "bluebird": "^3.3.3",
    "forever": "^0.15.1",
    "koa": "^2.0.0-alpha.3",
    "koa-mount": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-send": "^3.1.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-nexus": "^4.0.0-alpha.0"
  }
}
